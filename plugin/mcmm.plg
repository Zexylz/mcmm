<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/mcmm/mcmm-plugin-1.0.3-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/mcmm/mcmm-plugin-*.txz 2>/dev/null | grep -v '1.0.3')

echo ""
echo "----------------------------------------------------"
echo " MCMM - Modpack Manager has been installed."
echo " Version: 1.0.3"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg mcmm-plugin

rm -rf /usr/local/emhttp/plugins/mcmm
rm -rf /boot/config/plugins/mcmm

echo ""
echo "----------------------------------------------------"
echo " MCMM - Modpack Manager has been removed."
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

</PLUGIN>
